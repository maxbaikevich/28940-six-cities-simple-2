{
  "name": "six-cities-simple",
  "version": "1.0.0",
  "description": "Проект «Шесть городов (простой)» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "main.js",
  "scripts": {
    "start": "npm run build && node ./dist/main.js",
    "start:dev": "npm run ts ./src/main.ts | pino-pretty --colorize --transliteTime SYS:standart",
    "build": "npm run clean && npm run compile",
    "lint": "eslint src/ --ext .ts",
    "compile": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "ts": "ts-node",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123"
  },
  "devDependencies": {
    "@types/convict": "^6.1.6",
    "@types/node": "^16.11.26",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@types/convict-format-with-validator": "^6.0.5",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "eslint-config-htmlacademy": "^5.1.2",
    "json-server": "*",
    "pino-pretty": "^11.2.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^4.6.3"
  },
  "type": "module",
  "engines": {
    "node": "^16.13.0",
    "npm": "^8.1.0"
  },
  "dependencies": {
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "dayjs": "^1.11.12",
    "dotenv": "^16.4.5",
    "got": "^12.0.3",
    "pino": "^9.3.2"
  }
}
